$formInputColor=#0182ff
$title = #0b0b0b
$text = #c2c2c2
$boxShadow = 0px 0px 30px 10px rgba(0,0,0,.1)
.searchPage
    width: 100%
    display: flex
    flex-flow: row nowrap
    justify-content: center
    align-items: flex-start
    background-color: #ededed
    .back-top-button
        z-index: 1001
        position fixed
        top -100px
        width: 60px
        height: 60px
        background-color: white
        color $title
        box-shadow: $boxShadow
        text-align: center
        line-height: 60px
        display: flex
        justify-content: center
        align-items: center
        &:hover
            background-color $formInputColor
            color white
    .searchBody
         margin-top: 99px
         padding: 2vw
         margin-left: 2em
         width: 71vw
         bottom 0px
         box-shadow: $boxShadow
         background-color: white
         display: flex
         flex-flow: column nowrap
         justify-content: center
         align-items: flex-start

         .searchbar
             width: 100%
             padding: 0 2em
             display: flex
             align-items: center
             flex-flow: row nowrap
             justify-content: space-between
             .search_form
                 width: 70vw
                 margin:0 !important
             //排序按钮组
             .sortButtonGroup
                .MuiButton-root
                    height: 50px
                    line-height: 50px
                    text-align: center
                    padding: 0px 6px
                    color $formInputColor
         //搜索结果
         .searchResult
            width: 100%
            margin-top: 2vw
            display: flex
            flex-flow: row wrap
            justify-content: flex-start
            .makeStyles-cardRoot-5
                height auto
            .searchLine
                width: 100%
                display: flex
                flex-flow: row wrap
                justify-content: start
                position relative
                .is_Borrowing_Book_Item
                    width: 12vw
                    height auto
                    margin:0.5vw
                    .is_Borrowing_Book_Item_Image
                        width:10vw
                        height:10vw
                    .bookname
                        overflow: hidden
                        text-overflow: ellipsis
                        white-space: nowrap
                    .bookauthor
                        overflow: hidden
                        text-overflow: ellipsis
                        white-space: nowrap
                        color:rgba(0,0,0,.5)
                    .bookpublisher
                        overflow: hidden
                        text-overflow: ellipsis
                        white-space: nowrap
                        color:rgba(0,0,0,.5)
                .searchSummary
                    width: 100%
                    background-color: white
                    height: 100%
                    position: absolute
                    top 0
                    left 0
                    box-shadow: 0px 2px 1px -1px rgba(0,0,0,0.2), 0px 1px 1px 0px rgba(0,0,0,0.14), 0px 1px 3px 0px rgba(0,0,0,0.12)
                    display flex
                    flex-flow: row nowrap
                    justify-content: space-around
                    align-items: center
                    padding 1.2em
                    .closeButton
                        position: absolute
                        color: red
                        right 10px
                        top 10px
                        cursor pointer
                    .searchMainData
                        display: flex
                        flex-flow: column nowrap
                        justify-content: space-around
                        align-items: flex-start
                        height: 100%
                        box-sizing: border-box
                        .searchBookName
                            font-size: 1.3em
                            color:$title
                            margin-bottom: 1em
                        .searchBookItem
                            font-size: 0.8em
                            .searchBookBefore
                                color $text
                    .searchBookSummary
                        flex 1
                        height: 100%
                        width:60%
                        box-sizing: border-box
                        display: flex
                        justify-content: center
                        align-items: center
                        line-height: 30px
                        color: rgba(0,0,0,.33)
                        margin-left: 10px
                        span 
                            height: 110%
                            width:110%
                            display: flex
                            align-items: center
                            text-overflow: ellipsis
                            overflow: hidden;
                            font-size: 0.8em

                    .searchBookMore
                        display: flex
                        width: 12vw
                        height: 100%
                        flex-flow: column nowrap
                        justify-content: space-around
                        align-items: center
                        color $formInputColor
                        .searchBookImg
                            width: 10vw
                            height: 10vw
                        .positiveButton
                        color $formInputColor
                        &:hover
                            border-color: $formInputColor
            .loadMoreButtonLine
                width: 100%
                display: flex
                align-items: center
                justify-content: center
                .loadMoreButton
                    margin-top: 10px
                    color $formInputColor
                    .loadMoreIcon
                        font-size: 15px
                        color $formInputColor
           

    .searchClassify
        width: 20vw
        box-sizing: border-box
        margin: 25px
        background-color: white
        min-height: 500px
        box-shadow: 0px 0px 30px 10px rgba(0,0,0,.1)
        display: flex
        flex-flow: column nowrap
        justify-content: flex-start
        align-items: center
        padding 30px
        .closeButton
            color:red
            position:absolute
            right 2em
            top 1em
        .title
            width: 100%
            text-align: center 
            color: $formInputColor
            margin-bottom: 20px
        .select
            width: 100%
            display: flex
            flex-flow: row wrap
            align-items: center
            height: fit-content
            line-height: 40px
            margin-top 10px
            justify-content: space-between
            .select-title
                text-align: left 
                // margin-top: 10px
            &.date
                margin-top: -5px
                margin-bottom: 10px
            .error
                font-size: 10px
                color: red
                position relative
                top -12px
    .searchClassify_normal
        display: flex
@media screen and (max-width: 767px)
    .searchPage
        .back-top-button
            bottom:  20vw
            width: 10vw 
            height: 10vw 
        .searchBody
            width:98vw
            margin:99px 0 0 0
            .user_info_toggle
                background-color: $formInputColor
                padding: 0
                margin: 0
                border: 0
                position fixed
                right 0
                top 18vh
                color:white
                font-size: 24px
                font-weight: 300
                display flex
                justify-content: center
                align-items: center
                width: 10vw
                height: 10vw
                span 
                    padding-bottom: 0.2em
            .searchbar
                display flex 
                flex-direction: column 
                font-size: 15px
                .search_form
                    width: 90vw
                    margin:0 
            .searchResult
                padding: 0
                .searchLine
                    justify-content: flex-start
                .is_Borrowing_Book_Item
                    margin: 2vw !important
                    width: 40vw !important
                    height auto
                    .MuiCardContent-root
                        // padding: 1em
                        // margin: 1em 
                    .is_Borrowing_Book_Item_Image
                        max-width 150px
                        max-height 150px
                        width: 34vw !important
                        height: 34vw !important
                    .bookname
                        font-size: 1em 
                    .is_Borrowing_Book_Item_Font
                        font-size: 0.8em 
                .searchSummary
                    padding: 2em !important
                    .searchBookName
                        font-size: 1em !important
                    .searchBookBefore
                        font-size: 0.6em !important
                    .searchBookImg
                        width: 30vw !important; 
                        height: 30vw !important
                .positiveButton
                    padding: 0.6em
                    font-size: 10px
        .searchClassify_hide
            display: none
        .searchClassify_float
            position: fixed
            top: 10vh
            left:5vw
            width 80vw
            height auto
